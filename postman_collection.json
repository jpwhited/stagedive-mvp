{
  "info": {
    "name": "StageDive API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api", "auth", "register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Upload Track",
      "request": {
        "method": "POST",
        "url": { "raw": "{{baseUrl}}/api/tracks/upload", "host": ["{{baseUrl}}"], "path": ["api", "tracks", "upload"] },
        "header": [ { "key": "Content-Type", "value": "multipart/form-data" } ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "/path/to/audio.mp3" },
            { "key": "title", "value": "My Song", "type": "text" },
            { "key": "userId", "value": "{{userId}}", "type": "text" }
          ]
        }
      }
    },
    {
      "name": "Create Listing",
      "request": {
        "method": "POST",
        "url": { "raw": "{{baseUrl}}/api/listings/create", "host": ["{{baseUrl}}"], "path": ["api", "listings", "create"] },
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sellerId\": \"{{userId}}\",\n  \"title\": \"Sticker Pack\",\n  \"description\": \"A cool set of stickers\",\n  \"price\": 5.99,\n  \"category\": \"PHYSICAL\"\n}"
        }
      }
    }
  ]
}